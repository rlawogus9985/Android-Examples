<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BoldTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NormalTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RegularTextStyle">
        <item name="android:letterSpacing">-0.03</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="YellowUnderline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">9dp</item>
        <item name="android:background">@drawable/shape_4dp_rounded_background</item>
        <item name="android:backgroundTint">@color/primary_200</item>
    </style>
    <style name="photoVideoStyle">
        <item name="android:layout_width">98dp</item>
        <item name="android:layout_height">98dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/photo_video_shape</item>
    </style>
    <style name="barButtonStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>