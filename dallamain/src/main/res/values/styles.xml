<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="actionbarBtnStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="suitBoldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/suit_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#202020</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="suitSemiBoldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/suit_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#acacac</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="sansRegularStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/noto_sans_cjkkr_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#303030</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>